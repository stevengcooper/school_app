

<h1>Listing Grades</h1>

<table class="index">
  <thead>
    <tr>
      <th>Score</th>
      <th>Date</th>
      <th>Assignment name</th>
      <th>Student Id</th>
      <th>Teacher Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.score %></td>
        <td><%= grade.date %></td>
        <td><%= grade.assignment_name %></td>
        <td><%= grade.student_id %></td>
        <td><%= grade.teacher_id %></td>
        <td><%= link_to 'Show', grade %></td>
        <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
        <td><%= link_to 'Destroy', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if session[:user_type] == "Teacher" %>
  <div class="links">
    <%= link_to "Teacher Home", teachers_path %>
  </div>
<% elsif session[:user_type] == "Student" %>
  <div class="links">
    <%= link_to "Student Home", students_path %>
  </div>
<% elsif session[:user_type] == "Parent" %>
<div class="links">
  <%= link_to "Parent Home", parents_path %>
</div>
<% end %>
