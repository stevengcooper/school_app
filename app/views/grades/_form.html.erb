<%= form_for(@grade) do |f| %>
  <% if @grade.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@grade.errors.count, "error") %> prohibited this grade from being saved:</h2>

      <ul>
      <% @grade.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :teacher_id %>
    <%= f.collection_select :teacher_id, Grade.where(teacher_id: session[:user_id]), :id, :name %>
    <%= f.hidden_field :teacher_id %>
  </div>
  <div class="field">
    <%= f.label :student_id %>
    <%= f.collection_select :student_id, Student.where(teacher_id: session[:user_id]), :id, :name, {:prompt => 'Choose Student'} %>
    <% f.hidden_field :student_id %>
  </div>
  <div class="field">
    <%= f.label :score %><br>
    <%= f.text_field :score %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :assignment_name %><br>
    <%= f.text_field :assignment_name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
